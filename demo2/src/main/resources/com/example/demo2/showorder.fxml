<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.ShowOrder">

    <children>

        <!-- Title Label -->
        <Label layoutX="180.0" layoutY="30.0" text="Order Summary:">
            <font>
                <Font name="Bradley Hand ITC" size="28.0" />
            </font>
        </Label>

        <!--order details: this will be updated from controller-->
        <Label fx:id="orderlabel" layoutX="50.0" layoutY="80.0" prefHeight="200.0" prefWidth="500.0" style="-fx-font-size: 16px;" wrapText="true" />

        <!-- exit button -->
        <Button fx:id="exit" layoutX="541.0" layoutY="351.0" mnemonicParsing="false" onAction="#exit" text="Exit" />

        <!-- inventory button -->
        <Button fx:id="next" layoutX="377.0" layoutY="350.0" mnemonicParsing="false" onAction="#next" prefHeight="26.0" prefWidth="152.0" text="Next (check inventory)" />

        <!-- back button -->
        <Button fx:id="back" layoutX="21.0" layoutY="351.0" mnemonicParsing="false" onAction="#back" text="Menu &lt;- Back" />

    </children>
</AnchorPane>
